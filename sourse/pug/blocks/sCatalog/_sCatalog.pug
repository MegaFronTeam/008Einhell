mixin product-item(i, t, p ,pr)
	+b.ARTICLE.product-item
		+e.img-wrap(href="#")
			//- если надо картинку по центру  вывести использовать обертку .img-wrap-center  - если нет- убираем
			.img-wrap-center 
				+img(`img/prod-${i}.jpg`)
		+e.caption
			+e.title!= t
			+e.text!= p
			+e.price!= pr
			+e.btn(href='#')
	// /.product-item

mixin checkboxFilter(...items)
	+e.checkbox-row
		for item in items
			+in-c("checkbox", item)

mixin catalogItem(img,title)
	+e.item(href="#")&attributes(attributes)
		+e.item-img: +img(`img/${img}.jpg`)
		+e.item-title= title


mixin sCatalog(data)
